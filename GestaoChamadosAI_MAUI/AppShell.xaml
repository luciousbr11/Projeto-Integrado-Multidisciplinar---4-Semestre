<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:GestaoChamadosAI_MAUI.Views"
       x:Class="GestaoChamadosAI_MAUI.AppShell"
       Shell.BackgroundColor="{StaticResource Primary}"
       Shell.ForegroundColor="White"
       Shell.TitleColor="White"
       FlyoutBehavior="Disabled">

    <!-- Estilos da Shell -->
    <Shell.Resources>
        <Style TargetType="Shell" ApplyToDerivedTypes="True">
            <Setter Property="Shell.BackButtonBehavior">
                <BackButtonBehavior IsVisible="True" IsEnabled="True" />
            </Setter>
        </Style>
    </Shell.Resources>

    <!-- Rotas -->
    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <ShellContent
        Title="Dashboard"
        Route="DashboardPage"
        ContentTemplate="{DataTemplate views:DashboardPage}" />

    <ShellContent
        Title="Chamados"
        Route="ChamadosListPage"
        ContentTemplate="{DataTemplate views:ChamadosListPage}" />

</Shell>
