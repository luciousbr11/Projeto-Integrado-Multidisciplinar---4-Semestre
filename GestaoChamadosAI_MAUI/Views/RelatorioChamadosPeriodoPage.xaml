                <!-- Resumo Geral -->
                <Frame BackgroundColor="White" CornerRadius="12" Padding="20" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ“Š Resumo Geral" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                        
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                            <Grid.Behaviors>
                                <behaviors:ResponsiveGridBehavior Columns="2"/>
                            </Grid.Behaviors>
                            <!-- Total -->
                            <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="{StaticResource Gray100}" Padding="15" CornerRadius="8">
                                <VerticalStackLayout>
                                    <Label Text="Total" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                    <Label Text="{Binding Total}" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Abertos -->
                            <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#FEF3C7" Padding="15" CornerRadius="8">
                                <VerticalStackLayout>
                                    <Label Text="Abertos" FontSize="12" TextColor="#92400E"/>
                                    <Label Text="{Binding Abertos}" FontSize="24" FontAttributes="Bold" TextColor="#B45309"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Em Atendimento -->
                            <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#DBEAFE" Padding="15" CornerRadius="8">
                                <VerticalStackLayout>
                                    <Label Text="Em Atendimento" FontSize="12" TextColor="#1E3A8A"/>
                                    <Label Text="{Binding EmAtendimento}" FontSize="24" FontAttributes="Bold" TextColor="#2563EB"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Aguardando Cliente -->
                            <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#FCE7F3" Padding="15" CornerRadius="8">
                                <VerticalStackLayout>
                                    <Label Text="Aguardando Cliente" FontSize="12" TextColor="#831843"/>
                                    <Label Text="{Binding AguardandoCliente}" FontSize="24" FontAttributes="Bold" TextColor="#BE185D"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Fechados -->
                            <Frame Grid.Row="2" Grid.ColumnSpan="2" BackgroundColor="#D1FAE5" Padding="15" CornerRadius="8">
                                <VerticalStackLayout>
                                    <Label Text="Fechados" FontSize="12" TextColor="#065F46"/>
                                    <Label Text="{Binding Fechados}" FontSize="24" FontAttributes="Bold" TextColor="#059669"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Por Prioridade -->
                <Frame BackgroundColor="White" CornerRadius="12" Padding="20" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸŽ¯ Por Prioridade" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                        
                        <CollectionView ItemsSource="{Binding PorPrioridade}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:PrioridadeCount">
                                    <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                                        <Label Grid.Column="0" Text="{Binding Prioridade}" FontSize="16" VerticalOptions="Center"/>
                                        <Frame Grid.Column="1" 
                                               BackgroundColor="{StaticResource Primary}" 
                                               Padding="10,5" 
                                               CornerRadius="5" 
                                               HasShadow="False">
                                            <Label Text="{Binding Total}" FontAttributes="Bold" TextColor="White"/>
                                        </Frame>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Por Categoria IA - COMENTADO -->
                <!-- <Frame BackgroundColor="White" CornerRadius="12" Padding="20" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ“‚ Por Categoria IA" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                        
                        <CollectionView ItemsSource="{Binding PorCategoria}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:CategoriaCount">
                                    <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                                        <Label Grid.Column="0" Text="{Binding Categoria}" FontSize="16" VerticalOptions="Center"/>
                                        <Frame Grid.Column="1" 
                                               BackgroundColor="{StaticResource Secondary}" 
                                               Padding="10,5" 
                                               CornerRadius="5" 
                                               HasShadow="False">
                                            <Label Text="{Binding Total}" FontAttributes="Bold" TextColor="White"/>
                                        </Frame>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame> -->

                <!-- Lista de Chamados -->
                <Frame BackgroundColor="White" CornerRadius="12" Padding="20" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ“‹ Chamados do PerÃ­odo" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                        
                        <CollectionView ItemsSource="{Binding Chamados}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ChamadoResumo">
                                    <Frame Margin="0,5" Padding="15" BackgroundColor="{StaticResource Gray100}" CornerRadius="8">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Titulo}" FontAttributes="Bold" FontSize="16"/>
                                            
                                            <Frame Grid.Row="0" Grid.Column="1" 
                                                   Padding="8,4" 
                                                   CornerRadius="6" 
                                                   HasShadow="False" 
                                                   BackgroundColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                                <Label Text="{Binding Status}" FontSize="11" TextColor="White" FontAttributes="Bold"/>
                                            </Frame>
                                            
                                            <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="8">
                                                <Label Text="ðŸŽ¯" FontSize="14"/>
                                                <Frame Padding="6,3" CornerRadius="5" HasShadow="False" BackgroundColor="{Binding Prioridade, Converter={StaticResource PrioridadeToColorConverter}}">
                                                    <Label Text="{Binding Prioridade}" FontSize="12" TextColor="White" FontAttributes="Bold"/>
                                                </Frame>
                                            </HorizontalStackLayout>
                                            
                                            <Label Grid.Row="2" Grid.ColumnSpan="2" 
                                                   Text="{Binding CategoriaIA, StringFormat='ðŸ“‚ Categoria: {0}'}" 
                                                   FontSize="13" 
