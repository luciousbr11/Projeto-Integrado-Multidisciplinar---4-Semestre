                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Grid.Behaviors>
                        <behaviors:ResponsiveGridBehavior Columns="2"/>
                    </Grid.Behaviors>
                    <!-- Data InÃ­cio -->
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Data InÃ­cio:" FontSize="14" FontAttributes="Bold"/>
                        <DatePicker Date="{Binding DataInicio}"
                                   Format="dd/MM/yyyy"
                                   BackgroundColor="{StaticResource Gray100}"
                                   TextColor="{StaticResource Gray900}"/>
                    </VerticalStackLayout>

                    <!-- Data Fim -->
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Data Fim:" FontSize="14" FontAttributes="Bold"/>
                        <DatePicker Date="{Binding DataFim}"
                                   Format="dd/MM/yyyy"
                                   BackgroundColor="{StaticResource Gray100}"
                                   TextColor="{StaticResource Gray900}"/>
                    </VerticalStackLayout>
                </Grid>

                <Button Text="ðŸ” Filtrar"
                        Command="{Binding FiltrarCommand}"
