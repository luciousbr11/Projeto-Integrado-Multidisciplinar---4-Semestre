                                            <Label Grid.Row="3" Grid.ColumnSpan="2" 
                                                   Text="{Binding DataAbertura, StringFormat='ðŸ“… Aberto em: {0:dd/MM/yyyy}'}" 
                                                   FontSize="12" 
                                                   TextColor="{StaticResource Gray600}"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
