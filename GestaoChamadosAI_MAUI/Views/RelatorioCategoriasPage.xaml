<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GestaoChamadosAI_MAUI.ViewModels"
             xmlns:models="clr-namespace:GestaoChamadosAI_MAUI.Models"
             xmlns:behaviors="clr-namespace:GestaoChamadosAI_MAUI.Behaviors"
             x:Class="GestaoChamadosAI_MAUI.Views.RelatorioCategoriasPage"
             x:DataType="vm:RelatorioCategoriasViewModel"
             Title="RelatÃ³rio de Categorias IA">

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="0,0,0,10">
        
        <!-- Logo + Barra de AÃ§Ãµes -->
        <Grid Grid.Row="0" BackgroundColor="{StaticResource Primary}" Padding="15" ColumnDefinitions="Auto,*,Auto,Auto">
            <Image Grid.Column="0" Source="logo.png" WidthRequest="35" HeightRequest="35" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Button Grid.Column="2"
                    Text="â† Voltar"
                    Command="{Binding VoltarCommand}"
                    HeightRequest="45"
                    WidthRequest="120"
                    FontSize="16"
                    BackgroundColor="{StaticResource Gray700}"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="10,0"
                    Margin="0,0,10,0"/>
            <Button Grid.Column="3"
                    Text="ðŸ“„ PDF"
                    Command="{Binding ImprimirPDFCommand}"
                    HeightRequest="45"
                    FontSize="16"
                    BackgroundColor="#dc3545"
                    TextColor="White"
                    WidthRequest="90"
                    CornerRadius="8"
                    Padding="10,0"/>
        </Grid>
        
        <!-- Header -->
        <Frame Grid.Row="2" 
               BackgroundColor="White" 
               CornerRadius="12" 
               Padding="20" 
               HasShadow="True"
               Margin="10,10,10,10">
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="15">
                    <Label Text="ðŸ¤–" FontSize="32" VerticalOptions="Center"/>
                    <VerticalStackLayout>
                        <Label Text="Categorias IA" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"/>
                        <Label Text="ClassificaÃ§Ã£o automÃ¡tica de chamados" 
                               FontSize="14" 
                               TextColor="{StaticResource Gray600}"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <!-- EstatÃ­sticas Gerais -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                    <Grid.Behaviors>
                        <behaviors:ResponsiveGridBehavior Columns="2"/>
                    </Grid.Behaviors>
                    <Frame Grid.Column="0" BackgroundColor="{StaticResource Gray100}" Padding="15,10" CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="Categorias" 
                                   FontSize="12" 
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding TotalCategorias}" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="{StaticResource Primary}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="1" BackgroundColor="{StaticResource Primary}" Padding="15,10" CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="Total Chamados" 
                                   FontSize="12" 
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding TotalChamados}" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista de Categorias -->
        <ScrollView Grid.Row="3">
            <CollectionView ItemsSource="{Binding Categorias}" IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:CategoriaDetalhada">
                        <Frame Margin="0,0,0,10" 
                               Padding="20" 
                               BackgroundColor="White" 
                               CornerRadius="12" 
                               HasShadow="True">
                            <VerticalStackLayout Spacing="15">
                                
                                <!-- Nome da Categoria -->
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding Categoria}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}"
                                           VerticalOptions="Center"/>
                                    
                                    <Frame Grid.Column="1"
                                           BackgroundColor="{StaticResource Primary}"
                                           Padding="12,6"
                                           CornerRadius="8"
                                           HasShadow="False">
                                        <Label Text="{Binding Total, StringFormat='Total: {0}'}" 
                                               FontSize="14" 
                                               FontAttributes="Bold"
                                               TextColor="White"/>
                                    </Frame>
                                </Grid>

                                <!-- Divisor -->
                                <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray200}"/>

                                <!-- EstatÃ­sticas por Status -->
                                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
                                    <Grid.Behaviors>
                                        <behaviors:ResponsiveGridBehavior Columns="4"/>
                                    </Grid.Behaviors>
                                    <!-- Abertos -->
                                    <VerticalStackLayout Grid.Column="0">
                                        <Frame BackgroundColor="#FEF3C7" 
                                               Padding="10,8" 
                                               CornerRadius="8"
                                               HasShadow="False">
                                            <VerticalStackLayout>
                                                <Label Text="Abertos" 
                                                       FontSize="10" 
                                                       TextColor="#92400E"
                                                       HorizontalOptions="Center"/>
                                                <Label Text="{Binding Abertos}" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold" 
                                                       TextColor="#B45309"
                                                       HorizontalOptions="Center"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>

                                    <!-- Em Atendimento -->
                                    <VerticalStackLayout Grid.Column="1">
                                        <Frame BackgroundColor="#DBEAFE" 
                                               Padding="10,8" 
                                               CornerRadius="8"
                                               HasShadow="False">
                                            <VerticalStackLayout>
                                                <Label Text="Em Atend." 
                                                       FontSize="10" 
                                                       TextColor="#1E3A8A"
                                                       HorizontalOptions="Center"/>
                                                <Label Text="{Binding EmAtendimento}" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold" 
                                                       TextColor="#2563EB"
                                                       HorizontalOptions="Center"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>

                                    <!-- Aguardando -->
                                    <VerticalStackLayout Grid.Column="2">
                                        <Frame BackgroundColor="#FCE7F3" 
                                               Padding="10,8" 
                                               CornerRadius="8"
                                               HasShadow="False">
                                            <VerticalStackLayout>
                                                <Label Text="Aguard." 
                                                       FontSize="10" 
                                                       TextColor="#831843"
                                                       HorizontalOptions="Center"/>
                                                <Label Text="{Binding AguardandoCliente}" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold" 
                                                       TextColor="#BE185D"
                                                       HorizontalOptions="Center"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>

                                    <!-- Fechados -->
                                    <VerticalStackLayout Grid.Column="3">
                                        <Frame BackgroundColor="#D1FAE5" 
                                               Padding="10,8" 
                                               CornerRadius="8"
                                               HasShadow="False">
                                            <VerticalStackLayout>
                                                <Label Text="Fechados" 
                                                       FontSize="10" 
                                                       TextColor="#065F46"
                                                       HorizontalOptions="Center"/>
                                                <Label Text="{Binding Fechados}" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold" 
                                                       TextColor="#059669"
                                                       HorizontalOptions="Center"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Grid>

                                <!-- Barra de Progresso Visual -->
                                <ProgressBar Progress="{Binding ProgressoFechamento}" 
                                            ProgressColor="#059669"
                                            HeightRequest="8"/>
                                <Label Text="{Binding ProgressoFechamento, StringFormat='Taxa de ResoluÃ§Ã£o: {0:P0}'}" 
                                       FontSize="12" 
                                       TextColor="{StaticResource Gray600}"
                                       HorizontalOptions="Center"/>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2" 
                          IsRunning="{Binding IsLoading}" 
                          IsVisible="{Binding IsLoading}"
                          Color="{StaticResource Primary}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
