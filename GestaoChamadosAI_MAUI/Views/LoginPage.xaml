<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GestaoChamadosAI_MAUI.ViewModels"
             x:Class="GestaoChamadosAI_MAUI.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White"
             SizeChanged="OnPageSizeChanged">

    <ScrollView>
        <!-- Layout principal: Responsivo (2 colunas desktop / 1 coluna mobile) -->
        <Grid x:Name="MainGrid" ColumnDefinitions="*,*" RowDefinitions="Auto,*" MinimumHeightRequest="600">
            
            <!-- ============================= -->
            <!-- LADO ESQUERDO - BRANDING      -->
            <!-- ============================= -->
            <Frame x:Name="BrandingPanel"
                   Grid.Row="0"
                   Grid.Column="0" 
                   BackgroundColor="{StaticResource Primary}"
                   CornerRadius="0"
                   Padding="40,30"
                   HasShadow="False"
                   BorderColor="Transparent">
                
                <VerticalStackLayout x:Name="BrandingContent"
                                   Spacing="20" 
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">
                    
                    <!-- Logo -->
                    <Image x:Name="LogoImage"
                           Source="logo_sistema.png"
                           HeightRequest="120"
                           WidthRequest="120"
                           Aspect="AspectFit"
                           HorizontalOptions="Center"/>
                    

                    <!-- Título e Subtítulo -->
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label x:Name="TitleLabel"
                               Text="Atendix"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        
                        <Label x:Name="SubtitleLabel"
                               Text="Sistema Inteligente de Gestão de Chamados"
                               FontSize="14"
                               TextColor="White"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               Opacity="0.95"
                               MaximumWidthRequest="300"/>
                    </VerticalStackLayout>

                    <!-- Features -->
                    <VerticalStackLayout x:Name="FeaturesPanel" Spacing="12" Margin="0,10,0,0">
                        
                        <!-- Feature 1: IA Integrada -->
                        <Frame BackgroundColor="White"
                               BorderColor="Transparent"
                               CornerRadius="8"
                               Padding="12"
                               HasShadow="False">
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="🤖"
                                       FontSize="24"
                                       VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                    <Label Text="IA Integrada"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#1a1a1a"/>
                                    <Label Text="Respostas automáticas inteligentes"
                                           FontSize="12"
                                           TextColor="#666666"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Feature 2: Atendimento Rápido -->
                        <Frame BackgroundColor="White"
                               BorderColor="Transparent"
                               CornerRadius="8"
                               Padding="12"
                               HasShadow="False">
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="⚡"
                                       FontSize="24"
                                       VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                    <Label Text="Atendimento Rápido"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#1a1a1a"/>
                                    <Label Text="Resolução ágil de problemas"
                                           FontSize="12"
                                           TextColor="#666666"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Feature 3: Seguro e Confiável -->
                        <Frame BackgroundColor="White"
                               BorderColor="Transparent"
                               CornerRadius="8"
                               Padding="12"
                               HasShadow="False">
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="🛡️"
                                       FontSize="24"
                                       VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                    <Label Text="Seguro e Confiável"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#1a1a1a"/>
                                    <Label Text="Seus dados protegidos"
                                           FontSize="12"
                                           TextColor="#666666"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                        
                    </VerticalStackLayout>
                    
                </VerticalStackLayout>
            </Frame>

            <!-- ============================= -->
            <!-- LADO DIREITO - FORMULÁRIO     -->
            <!-- ============================= -->
            <ScrollView x:Name="FormPanel" Grid.Row="1" Grid.Column="1">
                <VerticalStackLayout x:Name="FormContent"
                                   Padding="40,30" 
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   Spacing="25"
                                   MaximumWidthRequest="500">

                    <!-- Cabeçalho do Formulário -->
                    <VerticalStackLayout Spacing="8">
                        <Label x:Name="WelcomeLabel"
                               Text="Bem-vindo de volta!"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#1a1a1a"/>
                        <Label x:Name="WelcomeSubLabel"
                               Text="Entre com suas credenciais para acessar o sistema"
                               FontSize="14"
                               TextColor="#666666"/>
                    </VerticalStackLayout>

                    <!-- Mensagem de Erro -->
                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                           BackgroundColor="#FFE5E5"
                           BorderColor="{StaticResource Error}"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="⚠️" FontSize="18" VerticalOptions="Center"/>
                            <Label Text="{Binding ErrorMessage}"
                                   TextColor="{StaticResource Error}"
                                   FontSize="14"
                                   VerticalOptions="Center"
                                   LineBreakMode="WordWrap"
                                   HorizontalOptions="FillAndExpand"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Campo Email -->
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="📧" FontSize="16" VerticalOptions="Center"/>
                            <Label Text="E-mail" 
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        
                        <Border Stroke="#e0e0e0"
                                StrokeThickness="2"
                                StrokeShape="RoundRectangle 10"
                                BackgroundColor="White">
                            <Entry Text="{Binding Email}"
                                   Placeholder="seu@email.com"
                                   Keyboard="Email"
                                   ReturnType="Next"
                                   FontSize="16"
                                   TextColor="#1a1a1a"
                                   PlaceholderColor="#999999"
                                   Margin="14,0"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Campo Senha -->
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="🔒" FontSize="16" VerticalOptions="Center"/>
                            <Label Text="Senha" 
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        
                        <Border Stroke="#e0e0e0"
                                StrokeThickness="2"
                                StrokeShape="RoundRectangle 10"
                                BackgroundColor="White">
                            <Entry Text="{Binding Senha}"
                                   Placeholder="Digite sua senha"
                                   IsPassword="True"
                                   ReturnType="Done"
                                   ReturnCommand="{Binding LoginCommand}"
                                   FontSize="16"
                                   TextColor="#1a1a1a"
                                   PlaceholderColor="#999999"
                                   Margin="14,0"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Botão Login -->
                    <Button Text="Entrar no Sistema"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            HeightRequest="56"
                            FontSize="18"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            Margin="0,10,0,0">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}" Opacity="0.4" Radius="15" Offset="0,8" />
                        </Button.Shadow>
                    </Button>

                    <!-- Loading -->
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                     IsVisible="{Binding IsLoading}"
                                     Color="{StaticResource Primary}"
                                     HorizontalOptions="Center"
                                     HeightRequest="30"/>

                    <!-- Footer -->
                    <HorizontalStackLayout Spacing="8" 
                                         HorizontalOptions="Center"
                                         Margin="0,20,0,0">
                        <Label Text="🔒"
                               FontSize="14"
                               TextColor="#999999"
                               VerticalOptions="Center"/>
                        <Label Text="Conexão segura e criptografada"
                               FontSize="14"
                               TextColor="#999999"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    
                </VerticalStackLayout>
            </ScrollView>
            
        </Grid>
    </ScrollView>
    
</ContentPage>
