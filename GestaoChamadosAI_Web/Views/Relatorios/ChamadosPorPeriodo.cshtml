@model GestaoChamadosAI_Web.Models.ViewModels.RelatoriosViewModel
@{
    ViewData["Title"] = "Chamados por Período";
}

<!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold">
                <i class="bi bi-calendar-range text-success"></i>
                Chamados por Período
            </h1>
            <p class="text-muted">Analise chamados filtrados por data</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
            <a asp-action="ImprimirChamadosPeriodoPDF" 
               asp-route-dataInicio="@Model.DataInicio" 
               asp-route-dataFim="@Model.DataFim" 
               class="btn btn-danger" 
               target="_blank">
                <i class="bi bi-file-earmark-pdf"></i> Imprimir PDF
            </a>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="bi bi-funnel"></i> Filtros
            </h5>
            <form asp-action="ChamadosPorPeriodo" method="get" class="row g-3">
                <div class="col-md-5">
                    <label for="dataInicio" class="form-label">Data Início</label>
                    <input type="date" class="form-control" id="dataInicio" name="dataInicio" 
                           value="@Model.DataInicio?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-5">
                    <label for="dataFim" class="form-label">Data Fim</label>
                    <input type="date" class="form-control" id="dataFim" name="dataFim" 
                           value="@Model.DataFim?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary">
                <div class="card-body" style="color: #ffffff !important;">
                    <h6 class="card-subtitle mb-2 opacity-75" style="color: #ffffff !important;">Total no Período</h6>
                    <h2 class="card-title mb-0" style="color: #ffffff !important;">@Model.TotalChamadosPeriodo</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-danger">
                <div class="card-body" style="color: #ffffff !important;">
                    <h6 class="card-subtitle mb-2 opacity-75" style="color: #ffffff !important;">Abertos</h6>
                    <h2 class="card-title mb-0" style="color: #ffffff !important;">@Model.ChamadosAbertos</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Em Andamento</h6>
                    <h2 class="card-title mb-0">@Model.ChamadosEmAndamento</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success">
                <div class="card-body" style="color: #ffffff !important;">
                    <h6 class="card-subtitle mb-2 opacity-75" style="color: #ffffff !important;">Concluídos</h6>
                    <h2 class="card-title mb-0" style="color: #ffffff !important;">@Model.ChamadosConcluidos</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Chamados -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-4">
                <i class="bi bi-table"></i> Chamados do Período
                <span class="text-muted small">
                    (@Model.DataInicio?.ToString("dd/MM/yyyy") - @Model.DataFim?.ToString("dd/MM/yyyy"))
                </span>
            </h5>
            
            @if (Model.ChamadosPorPeriodo != null && Model.ChamadosPorPeriodo.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Título</th>
                                <th>Cliente</th>
                                <th>Suporte</th>
                                <th>Categoria</th>
                                <th>Prioridade</th>
                                <th>Status</th>
                                <th>Data Abertura</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var chamado in Model.ChamadosPorPeriodo)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Chamados" asp-action="Details" asp-route-id="@chamado.Id">
                                            #@chamado.Id
                                        </a>
                                    </td>
                                    <td>
                                        <strong>@chamado.Titulo</strong>
                                    </td>
                                    <td>
                                        <small>@chamado.ClienteNome</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @(chamado.SuporteNome ?? "Náo atribuído")
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            @(chamado.CategoriaIA ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        @if (chamado.Prioridade == "Alta")
                                        {
                                            <span class="badge bg-danger">Alta</span>
                                        }
                                        else if (chamado.Prioridade == "Média")
                                        {
                                            <span class="badge bg-warning text-dark">Média</span>
                                        }
                                        else if (chamado.Prioridade == "Baixa")
                                        {
                                            <span class="badge bg-info">Baixa</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (chamado.Status == "Aberto")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-exclamation-circle"></i> Aberto
                                            </span>
                                        }
                                        else if (chamado.Status == "Em Andamento")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split"></i> Em Andamento
                                            </span>
                                        }
                                        else if (chamado.Status == "Concluído")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Concluído
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@chamado.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i>
                                            @chamado.DataAbertura.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    Nenhum chamado encontrado no período selecionado.
                </div>
            }
        </div>
    </div>
