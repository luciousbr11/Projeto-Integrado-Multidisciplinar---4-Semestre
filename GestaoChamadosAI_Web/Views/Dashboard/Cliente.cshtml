@{
    ViewData["Title"] = "In√≠cio";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<!-- Cabe√ßalho Simples -->
<div class="cliente-card mb-4">
    <h3 class="fw-bold mb-1">Ol√°, @User.Identity?.Name! üëã</h3>
    <p class="text-muted mb-0">Como podemos te ajudar hoje?</p>
</div>

<!-- Bot√£o Principal Grande -->
<div class="cliente-card mb-4">
    <a asp-controller="Chamados" asp-action="Create" class="btn btn-success btn-lg w-100 shadow-sm d-flex align-items-center justify-content-center gap-3" style="padding: 1.5rem; border-radius: 12px;">
        <i class="bi bi-plus-circle-fill" style="font-size: 2rem;"></i>
        <div class="text-start">
            <div class="fw-bold" style="font-size: 1.1rem;">Preciso de Ajuda</div>
            <small class="opacity-75">Abrir um novo chamado</small>
        </div>
    </a>
</div>

<!-- Resumo Visual Simples -->
<div class="cliente-card mb-4">
    <div class="row g-3">
        <div class="col-6">
            <div class="card border-0 shadow-sm h-100" style="background: #01acac;">
                <div class="card-body p-3 text-white text-center">
                    <i class="bi bi-hourglass-split mb-2" style="font-size: 2rem;"></i>
                    <h2 class="mb-0 fw-bold">@ViewBag.ChamadosAbertos</h2>
                    <small>Em Aberto</small>
                </div>
            </div>
        </div>
        
        <div class="col-6">
            <div class="card border-0 shadow-sm h-100" style="background: #019999;">
                <div class="card-body p-3 text-white text-center">
                    <i class="bi bi-arrow-repeat mb-2" style="font-size: 2rem;"></i>
                    <h2 class="mb-0 fw-bold">@ViewBag.ChamadosEmAndamento</h2>
                    <small>Em Atendimento</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Meus Chamados - Lista Super Simples -->
<div class="cliente-card mb-4">
    @if (ViewBag.ChamadosAtivos != null && ViewBag.ChamadosAtivos.Count > 0)
    {
        <div class="mb-4">
            <h5 class="fw-bold mb-3">üìã Meus Chamados Ativos</h5>
        
        <div class="d-flex flex-column gap-3">
            @foreach (var chamado in ViewBag.ChamadosAtivos)
            {
                <a href="@Url.Action("Details", "Chamados", new { id = chamado.Id })" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-lift" style="transition: all 0.3s;">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start gap-3">
                                <!-- √çcone Grande -->
                                <div class="flex-shrink-0">
                                    @if (chamado.Status == "Aberto")
                                    {
                                        <div class="bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                                            <i class="bi bi-clock text-info" style="font-size: 1.5rem;"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                                            <i class="bi bi-person-gear text-warning" style="font-size: 1.5rem;"></i>
                                        </div>
                                    }
                                </div>
                                
                                <!-- Conte√∫do -->
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-2 text-dark">@chamado.Titulo</h6>
                                    <div class="d-flex flex-wrap gap-2 align-items-center">
                                        @if (chamado.Status == "Aberto")
                                        {
                                            <span class="badge rounded-pill" style="background-color: #4dabf7; font-size: 0.75rem;">
                                                ‚è≥ Aguardando Atendimento
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill" style="background-color: #ffd43b; color: #000; font-size: 0.75rem;">
                                                üë§ Sendo Atendido
                                            </span>
                                        }
                                        <small class="text-muted">@chamado.DataAbertura.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </div>
                                
                                <!-- Seta -->
                                <div class="flex-shrink-0">
                                    <i class="bi bi-chevron-right text-muted" style="font-size: 1.2rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
        </div>
    }
    else
    {
        <div class="mb-4">
            <div class="card border-0 shadow-sm" style="background: #e8f8f8;">
                <div class="card-body text-center py-5">
                    <i class="bi bi-emoji-smile" style="font-size: 4rem; color: #01acac;"></i>
                    <h5 class="mt-3 mb-2">Tudo Certo!</h5>
                    <p class="text-muted mb-0">Voc√™ n√£o tem chamados ativos no momento</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Hist√≥rico Simples (se houver) -->
@if (ViewBag.ChamadosConcluidosRecentes != null && ViewBag.ChamadosConcluidosRecentes.Count > 0)
{
    <div class="cliente-card">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h6 class="fw-bold mb-0 text-muted">‚úÖ Resolvidos</h6>
            <small class="text-muted">√öltimos @ViewBag.ChamadosConcluidosRecentes.Count</small>
        </div>
        
        <div class="card border-0 shadow-sm">
            <div class="list-group list-group-flush">
                @foreach (var chamado in ViewBag.ChamadosConcluidosRecentes)
                {
                    <a href="@Url.Action("Details", "Chamados", new { id = chamado.Id })" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                        <div>
                            <div class="fw-medium text-dark">@chamado.Titulo</div>
                            <small class="text-muted">@chamado.DataAbertura.ToString("dd/MM/yyyy")</small>
                        </div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                }
            </div>
        </div>
    </div>
}

<style>
    .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.12) !important;
    }
</style>