@{
    ViewData["Title"] = "Dashboard - Administrador";
}

<div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="bi bi-speedometer2 text-primary me-2"></i>
                Painel do Administrador
            </h2>
            <p class="text-muted">Bem-vindo, <strong>@User.Identity?.Name</strong></p>
        </div>
    </div>

    <!-- Cards de estatísticas -->
    <div class="row mb-4">
        <div class="col-12 col-sm-6 col-md-3 mb-3">
            <div class="card kpi-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="kpi-title mb-2">Total de Chamados</div>
                            <div class="kpi-value">@ViewBag.TotalChamados</div>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded p-3">
                            <i class="bi bi-ticket-detailed text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3 mb-3">
            <div class="card kpi-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="kpi-title mb-2">Chamados Abertos</div>
                            <div class="kpi-value text-warning">@ViewBag.ChamadosAbertos</div>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded p-3">
                            <i class="bi bi-hourglass-split text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3 mb-3">
            <div class="card kpi-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="kpi-title mb-2">Em Andamento</div>
                            <div class="kpi-value text-info">@ViewBag.ChamadosEmAndamento</div>
                        </div>
                        <div class="bg-info bg-opacity-10 rounded p-3">
                            <i class="bi bi-arrow-repeat text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3 mb-3">
            <div class="card kpi-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="kpi-title mb-2">Concluídos</div>
                            <div class="kpi-value text-success">@ViewBag.ChamadosConcluidos</div>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded p-3">
                            <i class="bi bi-check-circle text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Solucionados por IA</h6>
                            <h3 class="mb-0 fw-bold text-primary">@ViewBag.ChamadosSolucionadosIA</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded p-3">
                            <i class="bi bi-robot text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ações rápidas -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-lightning-charge text-warning me-2"></i>
                        Ações Rápidas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid d-md-flex flex-wrap gap-2">
                        <a href="@Url.Action("Index", "Usuarios")" class="btn btn-primary w-100 w-md-auto">
                            <i class="bi bi-people me-2"></i>Gerenciar Usuários
                        </a>
                        <a href="@Url.Action("Index", "Chamados")" class="btn btn-info w-100 w-md-auto">
                            <i class="bi bi-ticket-detailed me-2"></i>Ver Todos os Chamados
                        </a>
                        <a href="@Url.Action("Create", "Usuarios")" class="btn btn-success w-100 w-md-auto">
                            <i class="bi bi-person-plus me-2"></i>Novo Usuário
                        </a>
                        <a href="@Url.Action("Create", "Chamados")" class="btn btn-warning text-white w-100 w-md-auto">
                            <i class="bi bi-plus-circle me-2"></i>Abrir Chamado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chamados recentes -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-clock-history text-primary me-2"></i>
                        Chamados Recentes
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ChamadosRecentes != null && ViewBag.ChamadosRecentes.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Título</th>
                                        <th>Usuário</th>
                                        <th>Status</th>
                                        <th>Data Abertura</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var chamado in ViewBag.ChamadosRecentes)
                                    {
                                        <tr>
                                            <td>@chamado.Titulo</td>
                                            <td>
                                                <i class="bi bi-person-circle me-1"></i>@chamado.Usuario?.Nome
                                            </td>
                                            <td>
                                                @if (chamado.Status == "Aberto")
                                                {
                                                    <span class="badge bg-warning">@chamado.Status</span>
                                                }
                                                else if (chamado.Status == "Em Andamento")
                                                {
                                                    <span class="badge bg-info">@chamado.Status</span>
                                                }
                                                else if (chamado.Status == "Concluído")
                                                {
                                                    <span class="badge bg-success">@chamado.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@chamado.Status</span>
                                                }
                                            </td>
                                            <td>@chamado.DataAbertura.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Chamados", new { id = chamado.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "Chamados", new { id = chamado.Id })" class="btn btn-sm btn-outline-warning">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1"></i>
                            <p class="mt-3">Nenhum chamado encontrado</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
