@model GestaoChamadosAI_Web.Models.Chamado

@{
    ViewData["Title"] = "Excluir Chamado";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Alerta de aviso -->
            <div class="alert alert-danger border-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill"></i> Atená§áo!
                </h4>
                <p>Vocáª está¡ prestes a excluir este chamado permanentemente.</p>
                <hr>
                <p class="mb-0">
                    <strong>Esta aá§áo náo pode ser desfeita!</strong>
                    Todos os dados relacionados a este chamado seráo perdidos.
                </p>
            </div>

            <!-- Card com informaá§áµes do chamado -->
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-trash-fill"></i> Confirmar Exclusáo de Chamado
                    </h4>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Dados do Chamado:</h5>
                    
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">#@Model.Id</dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-ticket-detailed"></i> Tá­tulo:
                        </dt>
                        <dd class="col-sm-9"><strong>@Model.Titulo</strong></dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-file-text"></i> Descriá§áo:
                        </dt>
                        <dd class="col-sm-9">
                            <div class="border-start border-primary border-3 ps-3">
                                @Model.Descricao
                            </div>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-person"></i> Usuá¡rio:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Usuario?.Nome
                            <br />
                            <small class="text-muted">@Model.Usuario?.Email</small>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-calendar-event"></i> Aberto em:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.DataAbertura.ToString("dd/MM/yyyy") á s @Model.DataAbertura.ToString("HH:mm")
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-flag"></i> Status:
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.Status == "Aberto")
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-exclamation-circle"></i> @Model.Status
                                </span>
                            }
                            else if (Model.Status == "Em Andamento")
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-hourglass-split"></i> @Model.Status
                                </span>
                            }
                            else if (Model.Status == "Concluído")
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> @Model.Status
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Status</span>
                            }
                        </dd>
                    </dl>

                    <!-- Tempo decorrido -->
                    <div class="alert alert-info">
                        <i class="bi bi-clock-history"></i>
                        <strong>Tempo desde abertura:</strong>
                        @{
                            var tempoDecorrido = DateTime.Now - Model.DataAbertura;
                            if (tempoDecorrido.TotalDays >= 1)
                            {
                                <text>@((int)tempoDecorrido.TotalDays) dia(s)</text>
                            }
                            else if (tempoDecorrido.TotalHours >= 1)
                            {
                                <text>@((int)tempoDecorrido.TotalHours) hora(s)</text>
                            }
                            else
                            {
                                <text>@((int)tempoDecorrido.TotalMinutes) minuto(s)</text>
                            }
                        }
                    </div>

                    <!-- Form de confirmaá§áo -->
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="bi bi-eye-fill"></i> Ver Detalhes
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Confirmar Exclusáo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}

