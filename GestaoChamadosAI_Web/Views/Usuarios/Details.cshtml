@model GestaoChamadosAI_Web.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <!-- Card principal com informações do usuário -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-badge-fill"></i> Detalhes do Usuário
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">ID</label>
                                <p class="fw-bold">#@Model.Id</p>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted small">
                                    <i class="bi bi-person"></i> Nome Completo
                                </label>
                                <p class="fw-bold">@Model.Nome</p>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted small">
                                    <i class="bi bi-envelope"></i> E-mail
                                </label>
                                <p class="fw-bold">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">
                                    <i class="bi bi-shield-check"></i> Tipo de Usuário
                                </label>
                                <p>
                                    @if (Model.Tipo == "Administrador")
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="bi bi-shield-fill"></i> @Model.Tipo
                                        </span>
                                    }
                                    else if (Model.Tipo == "Suporte")
                                    {
                                        <span class="badge bg-info fs-6">
                                            <i class="bi bi-tools"></i> @Model.Tipo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-person"></i> @Model.Tipo
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Botões de açáo -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 border-top pt-3">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar para Lista
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil-fill"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Excluir
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card com chamados do usuário -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-ticket-perforated-fill"></i> Chamados deste Usuário
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Chamados != null && Model.Chamados.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Título</th>
                                        <th>Data Abertura</th>
                                        <th>Status</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var chamado in Model.Chamados.OrderByDescending(c => c.DataAbertura))
                                    {
                                        <tr>
                                            <td>@chamado.Titulo</td>
                                            <td>
                                                <i class="bi bi-calendar-event"></i>
                                                @chamado.DataAbertura.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>
                                                @if (chamado.Status == "Aberto")
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-exclamation-circle"></i> @chamado.Status
                                                    </span>
                                                }
                                                else if (chamado.Status == "Em Andamento")
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-hourglass-split"></i> @chamado.Status
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> @chamado.Status
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-controller="Chamados" asp-action="Details" asp-route-id="@chamado.Id" 
                                                   class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye-fill"></i> Ver
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> 
                                Total de chamados: <strong>@Model.Chamados.Count()</strong>
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted p-4">
                            <i class="bi bi-inbox display-1"></i>
                            <p class="mt-2">Este usuário ainda náo possui chamados cadastrados.</p>
                            <a asp-controller="Chamados" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Criar Primeiro Chamado
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
