@model GestaoChamadosAI_Web.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-fill"></i> Editar Usuário
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">
                                <i class="bi bi-person"></i> Nome Completo
                            </label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> E-mail
                            </label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <div class="form-text">O e-mail deve ser único no sistema.</div>
                        </div>

                        <!-- Senha -->
                        <div class="mb-3">
                            <label asp-for="Senha" class="form-label">
                                <i class="bi bi-lock"></i> Senha
                            </label>
                            <input asp-for="Senha" type="password" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger small"></span>
                            <div class="form-text">Deixe em branco para manter a senha atual.</div>
                        </div>

                        <!-- Tipo de Usuário -->
                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label">
                                <i class="bi bi-shield-check"></i> Tipo de Usuário
                            </label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="">Selecione o tipo...</option>
                                <option value="Cliente">Cliente</option>
                                <option value="Suporte">Suporte</option>
                                <option value="Administrador">Administrador</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger small"></span>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="bi bi-eye-fill"></i> Ver Detalhes
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <!-- Validaçáo do lado do cliente -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
